@model SupertronicsRepairSystem.ViewModels.Technician.AddRepairNotesViewModel
@{
    ViewData["Title"] = "Add Repair Notes";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="mb-4">
                <h1 class="display-6 fw-bold mb-2">Add Technician Note</h1>
                <p class="text-muted">For job #@Model.JobId.Substring(0, 6).ToUpper() (@Model.ItemModel)</p>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header"><h5 class="mb-0">New Note</h5></div>
                <div class="card-body">
                    <form asp-action="AddRepairNotes" method="post">
                        <input type="hidden" asp-for="JobId" />
                        <div class="mb-3">
                            <label asp-for="NewNote" class="form-label fw-semibold"></label>
                            <textarea asp-for="NewNote" class="form-control" rows="4" placeholder="Enter internal note here..."></textarea>
                            <span asp-validation-for="NewNote" class="text-danger small"></span>
                        </div>
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="RepairJobs" class="btn btn-outline-secondary"><i class="bi bi-x-lg me-1"></i>Cancel</a>
                            <button type="submit" class="btn btn-primary px-4"><i class="bi bi-plus-circle me-1"></i>Add Note</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header"><h5 class="mb-0">Note History</h5></div>
                <div class="card-body">
                    @if (Model.ExistingNotes.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var note in Model.ExistingNotes)
                            {
                                <li class="list-group-item">
                                    <p class="mb-1" style="white-space: pre-wrap;">@note.Content</p>
                                    <small class="text-muted">@note.Timestamp.ToDateTime().ToString("MMM dd, yyyy @ HH:mm")</small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-center text-muted">No notes have been added to this job yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>