@model SupertronicsRepairSystem.ViewModels.Technician.TrackSerialNumberViewModel
@{
    ViewData["Title"] = "Track Serial Number";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Page Header -->
            <div class="mb-4 fade-in">
                <h1 class="display-6 fw-bold mb-2" style="color: var(--primary-blue);">
                    @ViewData["Title"]
                </h1>
                <p style="color: var(--secondary-text);">Enter a serial number to check warranty status and repair history</p>
            </div>

            <!-- Search Card -->
            <div class="card slide-in-left" style="animation-delay: 0.1s;">
                <div class="card-header">
                    <h5 class="mb-0">
                        Serial Number Lookup
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="TrackSerialNumber" method="post">
                        <div class="mb-3">
                            <label asp-for="SerialNumber" class="form-label">Serial Number</label>
                            <div class="input-group">
                                <input asp-for="SerialNumber" class="form-control form-control-lg" placeholder="Enter serial number..." />
                            </div>
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-search me-2"></i>Search Device
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results Section -->
            @if (!string.IsNullOrEmpty(Model?.SerialNumber))
            {
                <div class="mt-4 slide-in-right" style="animation-delay: 0.2s;">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i class="bi bi-info-circle me-2"></i>Device Information
                                <span class="badge ms-2" style="background: var(--primary-blue-gradient); color: white;">
                                    @Model.SerialNumber
                                </span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.JobId > 0 || Model.Status != null)
                            {
                                <div class="table-responsive">
                                    <table class="table mb-0">
                                        <thead class="bg-primary">
                                            <tr>
                                                <th>Job ID</th>
                                                <th>Device/Item</th>
                                                <th>Customer</th>
                                                <th>Status</th>
                                                <th>Warranty Expiry</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div style="color: var(--body-text);">#@Model.JobId</div>
                                                </td>
                                                <td>
                                                    <div style="color: var(--body-text);">@(Model.Item ?? "N/A")</div>
                                                    <small style="color: var(--secondary-text);">Serial: @Model.SerialNumber</small>
                                                </td>
                                                <td>
                                                    <div style="color: var(--body-text);">@(Model.Customer ?? "N/A")</div>
                                                    <small style="color: var(--secondary-text);">customer@email.com</small>
                                                </td>
                                                <td>
                                                    @if (Model.Status != null)
                                                    {
                                                        <span class="badge badge-in-progress">
                                                            <i class="bi bi-shield-check me-1"></i>@Model.Status
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span style="color: var(--secondary-text);">N/A</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div style="color: var(--body-text);">@Model.Warranty.ToString("MMM dd, yyyy")</div>
                                                    @{
                                                        var daysLeft = (Model.Warranty.Date - DateTime.Now.Date).Days;
                                                    }
                                                    <small style="color: var(--secondary-text);">
                                                        @if (daysLeft > 0)
                                                        {
                                                            @($"{daysLeft} days left")
                                                        }
                                                        else if (daysLeft == 0)
                                                        {
                                                            @:Expires today
                                                        }
                                                        else
                                                        {
                                                            @($"Expired {Math.Abs(daysLeft)} days ago")
                                                        }
                                                    </small>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5 fade-in">
                                    <i class="bi bi-info-circle display-4" style="color: var(--info);"></i>
                                    <h5 class="mt-3">No Device Information Found</h5>
                                    <p class="text-muted">This serial number has no recorded information in our system.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
