@model SupertronicsRepairSystem.ViewModels.Technician.TechnicianDashboardViewModel
@{
    ViewData["Title"] = "Technician Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4 slide-in-left">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-1" style="color: var(--primary-blue);">
                        Welcome Back, Technician
                    </h1>
                    <p style="color: var(--secondary-text);">Here's an overview of your workload today</p>
                </div>
                <div class="text-end">
                    <div class="small text-muted">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</div>
                    <div class="fw-bold" style="color: var(--primary-blue);">@DateTime.Now.ToString("HH:mm")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-lg-4 col-md-6 slide-in-left" style="animation-delay: 0.1s;">
            <div class="dashboard-card">
                <i class="bi bi-clock-history"></i>
                <h3>@(Model?.PendingJobs ?? 12)</h3>
                <p>Pending Jobs</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 fade-in" style="animation-delay: 0.2s;">
            <div class="dashboard-card">
                <i class="bi bi-check-circle"></i>
                <h3>@(Model?.CompletedJobs ?? 8)</h3>
                <p>Completed Jobs</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 slide-in-right" style="animation-delay: 0.3s;">
            <div class="dashboard-card">
                <i class="bi bi-file-text"></i>
                <h3>@(Model?.QuotesCreated ?? 5)</h3>
                <p>Quotes Created</p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row fade-in" style="animation-delay: 0.4s;">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 d-flex align-items-center">
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <a class="btn btn-dashboard w-100 py-3 d-flex flex-column align-items-center" asp-action="CreateRepairJob">
                                <i class="bi bi-plus-circle mb-2 fs-4"></i>
                                <div class="fw-semibold">Create New Job</div>
                                <small class="opacity-75 mt-1">Start a repair job</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a class="btn btn-dashboard w-100 py-3 d-flex flex-column align-items-center" asp-action="RepairJobs">
                                <i class="bi bi-list-task mb-2 fs-4"></i>
                                <div class="fw-semibold">View All Jobs</div>
                                <small class="opacity-75 mt-1">Manage active repairs</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a class="btn btn-dashboard w-100 py-3 d-flex flex-column align-items-center" asp-action="GenerateRepairQuote">
                                <i class="bi bi-calculator mb-2 fs-4"></i>
                                <div class="fw-semibold">Create Quote</div>
                                <small class="opacity-75 mt-1">Generate repair quote</small>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a class="btn btn-dashboard w-100 py-3 d-flex flex-column align-items-center" asp-action="TrackSerialNumber">
                                <i class="bi bi-search mb-2 fs-4"></i>
                                <div class="fw-semibold">Serial Lookup</div>
                                <small class="opacity-75 mt-1">Track device history</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

