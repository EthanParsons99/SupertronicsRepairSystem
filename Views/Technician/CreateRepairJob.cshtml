@model SupertronicsRepairSystem.ViewModels.Technician.CreateRepairJobViewModel
@{
    ViewData["Title"] = "Create Repair Job";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <!-- Page Header -->
            <div class="mb-4">
                <h1 class="display-6 fw-bold mb-2" style="color: var(--primary-blue);">
                    Create New Repair Job
                </h1>
                <p style="color: var(--secondary-text);">Fill in the details to start a new repair job</p>
            </div>

            <!-- Form Card -->
            <div class="card shadow-sm">
                <div class="card-header text-white">
                    <h5 class="mb-0">
                        Job Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRepairJob" asp-controller="Technician" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CustomerName" class="form-label fw-semibold">
                                    Customer Name
                                </label>
                                <input asp-for="CustomerName" class="form-control" placeholder="Enter customer name" />
                                <span asp-validation-for="CustomerName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="SerialNumber" class="form-label fw-semibold">
                                    Serial Number
                                </label>
                                <input asp-for="SerialNumber" class="form-control" placeholder="Enter device serial number" />
                                <span asp-validation-for="SerialNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ItemModel" class="form-label fw-semibold">
                                    Device/Item Model
                                </label>
                                <input asp-for="ItemModel" class="form-control" placeholder="Enter device/item model" />
                                <span asp-validation-for="ItemModel" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ProblemDescription" class="form-label fw-semibold">
                                    Problem Description
                                </label>
                                <textarea asp-for="ProblemDescription" class="form-control" rows="4" 
                                    placeholder="Describe the issue in detail..."></textarea>
                                <span asp-validation-for="ProblemDescription" class="text-danger small"></span>
                                <div class="form-text">
                                    Include symptoms, when the problem started, and any error messages
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="RepairJobs" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle me-1"></i>Create Job
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

