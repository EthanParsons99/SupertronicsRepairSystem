@model SupertronicsRepairSystem.ViewModels.Technician.GenerateProductQuoteViewModel
@{
    ViewData["Title"] = "Generate Product Quote";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">

        <!-- Page Header -->
            <div class="mb-4">
                <h1 class="display-6 fw-bold mb-2" style="color: var(--primary-blue);">
                    Generate Product Quote
                </h1>
                <p style="color: var(--secondary-text);">Fill in the details to generate a product quote</p>
            </div>

            <!-- Form Card -->
            <div class="card shadow">
                <div class="card-header text-white">
                    <h5 class="mb-0">
                        Quote Details
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateProductQuote" method="post">
                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label">Product ID</label>
                            <input asp-for="ProductId" class="form-control" type="text" placeholder="Enter product ID"/>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Quantity</label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" placeholder="Enter quantity"/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TotalPrice" class="form-label">Total Price</label>
                            <input asp-for="TotalPrice" class="form-control" type="number" placeholder="R0.00" min="0" step="0.01" readonly />
                        </div>
                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="RepairJobs" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle me-1"></i>Generate Quote
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>