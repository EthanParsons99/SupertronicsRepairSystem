@model SupertronicsRepairSystem.ViewModels.KeepAsideViewModel

@{
    ViewData["Title"] = "Customer Keep Aside";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background-color: #1a1a2e;
            color: #fff;
            padding: 20px;
        }

        .header {
            background-color: #2d3748;
            padding: 15px 30px;
            margin-bottom: 30px;
            border-radius: 8px;
        }

            .header h2 {
                color: #fff;
                font-size: 20px;
            }

        .nav-links {
            display: flex;
            gap: 20px;
            margin-top: 10px;
        }

            .nav-links a {
                color: #a0aec0;
                text-decoration: none;
                font-size: 14px;
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
        }

        .form-section {
            background-color: #2d3748;
            padding: 30px;
            border-radius: 8px;
        }

        .form-title {
            font-size: 18px;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid #4a5568;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

        label {
            font-size: 13px;
            color: #a0aec0;
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="tel"],
        input[type="date"] {
            padding: 10px 12px;
            background-color: #1a202c;
            border: 1px solid #4a5568;
            border-radius: 4px;
            color: #fff;
            font-size: 14px;
        }

            input[type="text"]:focus,
            input[type="tel"]:focus,
            input[type="date"]:focus {
                outline: none;
                border-color: #667eea;
            }

        input::placeholder {
            color: #718096;
        }

        .date-input {
            position: relative;
        }

        .button-group {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 30px;
        }

        button {
            padding: 10px 24px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-cancel {
            background-color: transparent;
            color: #a0aec0;
            border: 1px solid #4a5568;
        }

            .btn-cancel:hover {
                background-color: #4a5568;
            }

        .btn-submit {
            background-color: #667eea;
            color: #fff;
        }

            .btn-submit:hover {
                background-color: #5568d3;
            }

        .product-card {
            background-color: #2d3748;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }

        .product-image {
            width: 200px;
            height: 150px;
            object-fit: contain;
            background-color: #fff;
            border-radius: 8px;
            margin: 0 auto 15px;
            display: block;
            padding: 10px;
        }

        .product-name {
            font-size: 14px;
            line-height: 1.5;
            margin-bottom: 10px;
        }

        .product-sku {
            font-size: 12px;
            color: #a0aec0;
        }

        .btn-remove {
            background-color: #e53e3e;
            color: white;
            padding: 8px 16px;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            margin-top: 15px;
        }

        .validation-error {
            color: #fc8181;
            font-size: 12px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h2>Supertronics</h2>
        <div class="nav-links">
            <a href="#">Products</a>
            <a href="#">Keep Asides</a>
            <a href="#">Get Quote</a>
            <a href="#">Cart</a>
        </div>
    </div>

    <div class="container">
        <div class="form-section">
            <h3 class="form-title">Keep Aside Form</h3>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="CustomerName">Customer Name</label>
                        <input asp-for="CustomerName" type="text" placeholder="Enter customer name" />
                        <span asp-validation-for="CustomerName" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CustomerSurname">Customer Surname</label>
                        <input asp-for="CustomerSurname" type="text" placeholder="Enter customer surname" />
                        <span asp-validation-for="CustomerSurname" class="validation-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="ContactNumber">Customer Contact Number</label>
                        <input asp-for="ContactNumber" type="tel" placeholder="082 021 2932" />
                        <span asp-validation-for="ContactNumber" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IdPassportNumber">Customer ID/Passport Number</label>
                        <input asp-for="IdPassportNumber" type="text" placeholder="Enter customer ID/Passport number" />
                        <span asp-validation-for="IdPassportNumber" class="validation-error"></span>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label asp-for="DeviceSku">Device Sku</label>
                    <input asp-for="DeviceSku" type="text" placeholder="3082-1222" value="3082-1222" readonly />
                    <span asp-validation-for="DeviceSku" class="validation-error"></span>
                </div>

                <div class="form-group full-width date-input">
                    <label asp-for="CollectionDate">Collection Date</label>
                    <input asp-for="CollectionDate" type="date" />
                    <span asp-validation-for="CollectionDate" class="validation-error"></span>
                </div>

                <div class="button-group">
                    <button type="button" class="btn-cancel" onclick="location.href='@Url.Action("Index", "Home")'">Cancel</button>
                    <button type="submit" class="btn-submit">✓ Create keep aside</button>
                </div>
            </form>
        </div>

        <div class="product-card">
            <img src="https://images.unsplash.com/photo-1496181133206-80ce9b88a853?w=400&h=300&fit=crop"
                 alt="@ViewBag.Product.Name"
                 class="product-image" />
            <div class="product-name">@ViewBag.Product.Name</div>
            <div class="product-sku">SKU: @ViewBag.Product.Sku</div>
            <button class="btn-remove">🗑</button>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>