@model SupertronicsRepairSystem.Models.RepairJob
@{
    ViewData["Title"] = "Repair Details";
}

<div class="container py-4">
    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="TrackRepair" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left me-2"></i>Back to My Repairs
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Main Details -->
        <div class="col-lg-8">
            <!-- Job Information Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-wrench me-2"></i>Repair Job Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Job ID</label>
                            <p class="fw-bold">@Model.Id</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Status</label>
                            <p>
                                @{
                                    var statusBadge = Model.Status.ToLower() switch
                                    {
                                        "pending" => "bg-warning text-dark",
                                        "in progress" => "bg-info",
                                        "awaiting approval" => "bg-primary",
                                        "completed" => "bg-success",
                                        "cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusBadge">@Model.Status</span>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Item Model</label>
                            <p class="fw-bold">@Model.ItemModel</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.SerialNumber))
                        {
                            <div class="col-md-6">
                                <label class="text-muted small">Serial Number</label>
                                <p class="fw-bold">@Model.SerialNumber</p>
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Problem Description</label>
                        <div class="alert alert-light border">
                            @Model.ProblemDescription
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label class="text-muted small">Date Received</label>
                            <p>@Model.DateReceived.ToDateTime().ToLocalTime().ToString("MMMM dd, yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Last Updated</label>
                            <p>@Model.LastUpdated.ToDateTime().ToLocalTime().ToString("MMMM dd, yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quotes Card -->
            @if (Model.Quotes != null && Model.Quotes.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-receipt me-2"></i>Quotes
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var quote in Model.Quotes)
                        {
                            <div class="quote-section mb-4 p-3 border rounded">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="mb-0">Quote #@quote.Id</h6>
                                    <span class="text-muted">
                                        Created: @quote.DateCreated.ToDateTime().ToLocalTime().ToString("MMM dd, yyyy")
                                    </span>
                                </div>

                                @if (quote.QuoteParts != null && quote.QuoteParts.Any())
                                {
                                    <div class="table-responsive mb-3">
                                        <table class="table table-sm">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Part</th>
                                                    <th>Part Number</th>
                                                    <th class="text-center">Qty</th>
                                                    <th class="text-end">Unit Price</th>
                                                    <th class="text-end">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var part in quote.QuoteParts)
                                                {
                                                    <tr>
                                                        <td>
                                                            <strong>@part.PartName</strong>
                                                            @if (!string.IsNullOrEmpty(part.Description))
                                                            {
                                                                <br />
                                            
                                                                <small class="text-muted">@part.Description</small>
                                                            }
                                                        </td>
                                                        <td>@part.PartNumber</td>
                                                        <td class="text-center">@part.Quantity</td>
                                                        <td class="text-end">R@part.UnitPrice.ToString("N2")</td>
                                                        <td class="text-end fw-bold">R@((part.Quantity * part.UnitPrice).ToString("N2"))</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-1">
                                            <span class="text-muted">Labor Hours:</span>
                                            <strong>@($"{quote.LaborHours} hrs R{quote.LaborRate:N2}/hr")</strong>
                                        </p>
                                    </div>
                                </div>

                                <hr />

                                <div class="row">
                                    <div class="col-md-8 offset-md-4">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Parts Total:</span>
                                            <strong>R@quote.PartsTotal.ToString("N2")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Labor Total:</span>
                                            <strong>R@quote.LaborTotal.ToString("N2")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Subtotal:</span>
                                            <strong>R@quote.SubTotal.ToString("N2")</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Tax (15%):</span>
                                            <strong>R@quote.TaxAmount.ToString("N2")</strong>
                                        </div>
                                        <hr />
                                        <div class="d-flex justify-content-between">
                                            <h5>Total Amount:</h5>
                                            <h5 class="text-primary">R@quote.TotalAmount.ToString("N2")</h5>
                                        </div>
                                    </div>
                                </div>

                                <div class="alert alert-info mt-3 mb-0">
                                    <i class="bi bi-clock me-2"></i>
                                    <strong>Valid Until:</strong> @quote.ValidUntil.ToDateTime().ToLocalTime().ToString("MMMM dd, yyyy")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Timeline & Notes -->
        <div class="col-lg-4">
            <!-- Technician Notes Card -->
            @if (Model.TechnicianNotes != null && Model.TechnicianNotes.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-chat-left-text me-2"></i>Technician Notes
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            @foreach (var note in Model.TechnicianNotes.OrderByDescending(n => n.Timestamp))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="timeline-marker"></div>
                                    <div class="timeline-content">
                                        <small class="text-muted d-block mb-1">
                                            @note.Timestamp.ToDateTime().ToLocalTime().ToString("MMM dd, yyyy HH:mm")
                                        </small>
                                        <p class="mb-0">@note.Content</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Status Help Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Status Guide
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <span class="badge bg-warning text-dark">Pending</span>
                        <small class="d-block mt-1">Waiting for technician review</small>
                    </div>
                    <div class="mb-2">
                        <span class="badge bg-primary">Awaiting Approval</span>
                        <small class="d-block mt-1">Quote sent, awaiting your approval</small>
                    </div>
                    <div class="mb-2">
                        <span class="badge bg-info">In Progress</span>
                        <small class="d-block mt-1">Repair work is underway</small>
                    </div>
                    <div class="mb-2">
                        <span class="badge bg-success">Completed</span>
                        <small class="d-block mt-1">Ready for collection</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
        padding: 1rem 1.25rem;
    }

    .bg-primary {
        background-color: #5865F2 !important;
    }

    .text-primary {
        color: #5865F2 !important;
    }

    .btn-primary {
        background-color: #5865F2;
        border-color: #5865F2;
    }

    .quote-section {
        background-color: #f8f9fa;
    }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
    }

    .timeline-marker {
        position: absolute;
        left: -30px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #5865F2;
        border: 3px solid #fff;
        box-shadow: 0 0 0 2px #5865F2;
    }

    .timeline-item:not(:last-child) .timeline-marker::after {
        content: '';
        position: absolute;
        top: 12px;
        left: 50%;
        transform: translateX(-50%);
        width: 2px;
        height: calc(100% + 12px);
        background-color: #dee2e6;
    }

    .timeline-content {
        background: white;
        padding: 12px;
        border-radius: 8px;
        border-left: 3px solid #5865F2;
    }
</style>