@model IEnumerable<SupertronicsRepairSystem.Models.Product>

@{
    ViewData["Title"] = "Customer View Product";
}

<link rel="stylesheet" href="~/css/CustomerViewProduct.css">

<div class="container mt-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="product-section">
                <div class="image-gallery">
                    <div class="main-image-container">
                        <span class="stock-badge">@((product.StockQuantity > 0) ? "In Stock" : "Out of Stock")</span>
                        <div class="nav-arrow left">‹</div>
                        <img src="@product.ImageUrl" alt="@product.Name" class="main-image" />
                        <div class="nav-arrow right">›</div>
                    </div>
                    <div class="thumbnail-gallery">
                        <img src="@product.ImageUrl" class="thumbnail active" />
                        <div class="view-360">👁️</div>
                    </div>
                </div>

                <div class="product-info">
                    <button class="favorite-btn">♡</button>
                    <h1 class="product-title">@product.Name</h1>
                    <p>@product.Description</p>

                    <div class="price-section">
                        <div>
                            <span class="old-price">R@product.WasPrice.ToString("N0")</span>
                            <span class="was-label">Was</span>
                        </div>
                        <div>
                            <span class="current-price">R@product.Price.ToString("N0")</span>
                            <span class="now-label">Now</span>
                        </div>
                        <div>
                            <span class="discount">-@product.DiscountPercentage%</span>
                        </div>
                    </div>

                    <div class="divider"></div>

                    <div class="quantity-section">
                        <span class="quantity-label">Qty:</span>
                        <div class="quantity-controls">
                            <button class="quantity-btn">-</button>
                            <span class="quantity-value">1</span>
                            <button class="quantity-btn">+</button>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button class="btn btn-add-cart">Keep Aside</button>
                        <button class="btn btn-buy-now">Add to cart</button>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No products found.</p>
    }

    <div class="recommendations">
        <h2>You may also like</h2>
        <div class="recommendation-grid">
            <p>Check back later for recommended products.</p>
        </div>
    </div>
</div>
