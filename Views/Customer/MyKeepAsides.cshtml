@model List<SupertronicsRepairSystem.ViewModels.KeepAsideViewModel>
@{
    ViewData["Title"] = "My Keep Asides";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/AllKeepAsides.css">
</head>
<body>
    <div class="container">
        <div class="hero-header">
            <h1 class="hero-title">My Keep Asides</h1>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="keep-asides-table">
                <table>
                    <thead>
                        <tr>
                            <th>Device Serial Number</th>
                            <th>Customer</th>
                            <th>Collection Date</th>
                            <th>Status</th>
                            <th>Expiry Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isOverdue = item.CollectionDate.HasValue && item.CollectionDate.Value < DateTime.Now;
                            var expiryDate = item.CollectionDate.HasValue ? item.CollectionDate.Value.AddDays(7) : (DateTime?)null;
                            <tr>
                                <td data-label="Device">
                                    <div class="device-name">@item.DeviceSerialNumber</div>
                                </td>
                                <td data-label="Customer">
                                    <div class="customer-name">@item.CustomerName @item.CustomerSurname</div>
                                    <div class="contact-number">@item.ContactNumber</div>
                                </td>
                                <td data-label="Collection Date">
                                    @if (item.CollectionDate.HasValue)
                                    {
                                        <span class="date-cell">@item.CollectionDate.Value.ToString("dd MMM yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="date-cell">Not set</span>
                                    }
                                </td>
                                <td data-label="Status">
                                    <span class="status-badge @(isOverdue ? "overdue" : "active")">
                                        @(isOverdue ? "Overdue" : "Active")
                                    </span>
                                </td>
                                <td data-label="Expiry Date">
                                    @if (expiryDate.HasValue)
                                    {
                                        <span class="date-cell">@expiryDate.Value.ToString("dd MMM yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="date-cell">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">📦</div>
                <h2 class="empty-title">No Keep Asides Yet</h2>
                <p class="empty-text">You haven't reserved any products. Start browsing to find items you'd like to keep aside.</p>
                <button class="btn-primary" onclick="location.href='@Url.Action("AllProducts", "Customer")'">Browse Products</button>
            </div>
        }
    </div>
</body>
</html>