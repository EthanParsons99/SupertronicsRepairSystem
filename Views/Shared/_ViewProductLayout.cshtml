<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupertronicsRepairSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SupertronicsRepairSystem.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="CustomerDashboard" asp-action="Index">
                    Supertronics
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#customerNavbar" aria-controls="customerNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="customerNavbar">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CustomerDashboard" asp-action="CustomerViewProduct">
                                <i class="bi bi-box-seam me-1"></i>Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CustomerDashboard" asp-action="KeepsAsides">
                                <i class="bi bi-bookmark me-1"></i>Keeps Asides
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CustomerDashboard" asp-action="GetQuote">
                                <i class="bi bi-file-earmark-text me-1"></i>Get Quote
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CustomerDashboard" asp-action="Cart">
                                <i class="bi bi-cart me-1"></i>Cart
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>Joshua
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>About Supertronics</h3>
                <p>Your trusted partner for electronics repair and sales. We provide quality service and products at competitive prices.</p>
                <div class="contact-info">
                    <p><i class="bi bi-geo-alt-fill"></i>  269B Voortrekker Rd, Fairfield Estate, Cape Town, 7500</p>
                    <p><i class="bi bi-telephone-fill"></i>  021 939 5555/068 055 555</p>
                    <p><i class="bi bi-envelope-fill"></i> support@supertronics.co.za</p>
                </div>
            </div>

            <div class="footer-section">
                <h3>Customer Service</h3>
                <div class="footer-links">
                    <a href="#"><i class="bi bi-chevron-right"></i> Contact Us</a>
                    <a href="#"><i class="bi bi-chevron-right"></i> Shipping Information</a>
                    <a href="#"><i class="bi bi-chevron-right"></i> Returns & Exchanges</a>
                    <a href="#"><i class="bi bi-chevron-right"></i> Warranty Information</a>
                    <a href="#"><i class="bi bi-chevron-right"></i> Track Your Order</a>
                    <a href="#"><i class="bi bi-chevron-right"></i> FAQs</a>
                </div>
            </div>

            <div class="footer-section">
                <h3>Opening Times</h3>
                <div class="opening-times-list">
                    <div class="time-row">
                        <span><i class="bi bi-calendar-check"></i> Monday - Friday</span>
                        <span class="time-value">9am - 5pm</span>
                    </div>
                    <div class="time-row">
                        <span><i class="bi bi-calendar-check"></i> Saturday</span>
                        <span class="time-value">9am - 2pm</span>
                    </div>
                    <div class="time-row">
                        <span><i class="bi bi-calendar-x"></i> Sunday</span>
                        <span class="time-value">Closed</span>
                    </div>
                </div>
                <div class="social-section">
                    <h4>Follow Us</h4>
                    <div class="social-icons">
                        <a href="#" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" title="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" title="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <div class="footer-section">
                <h3>Find Us</h3>
                <div class="map-container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3309.5!2d18.5919!3d-33.9052!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcc5a5c1bcdcde3%3A0xb69e14ab2bc7388e!2s269B%20Voortrekker%20Rd%2C%20Fairfield%20Estate%2C%20Cape%20Town%2C%207500!5e0!3m2!1sen!2sza!4v1234567890" width="100%"
                            height="200"
                            style="border:0; border-radius: 8px;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
                <p class="map-credit">
                    <i class="bi bi-geo-alt"></i>  269B Voortrekker Rd, Fairfield Estate, Cape Town, 7500
                </p>
            </div>
        </div>

   
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
