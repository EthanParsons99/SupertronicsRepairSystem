<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-gray-100 text-gray-900">

    <header class="bg-gray-900 text-white sticky top-0 z-50 shadow-md">
        <nav class="navbar navbar-expand-sm navbar-dark custom-navbar">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Municipal Services</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="CustomerDashboard" asp-action="Index">Customer</a>
                        </li>

                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="min-h-screen">
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-center text-white py-6 mt-12">
        &copy; @DateTime.Now.Year. All rights reserved.
    </footer>

</body>
</html>
