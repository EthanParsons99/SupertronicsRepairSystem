@{
    ViewData["Title"] = "Your cart";
    Layout = "_ViewProductLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Your cart</h1>

    <!-- Cart items (UI-first; replace with real model later) -->
    <div class="row">
        <div class="col-lg-8">
            <div class="list-group mb-3">
                <div class="list-group-item d-flex align-items-center">
                    <img src="~/images/placeholder-product.png" alt="Product" class="me-3" style="width:80px;height:60px;object-fit:cover;border-radius:6px;" />
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="mb-1">Sample Product Name</h5>
                                <div class="small text-muted">Model: ABC-123 • SKU: PROD-001</div>
                            </div>
                            <div class="text-end">
                                <div class="mb-2">R 9 999</div>
                                <div class="input-group input-group-sm" style="width:120px;">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input class="form-control text-center" value="1" />
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <div class="mt-2">
                                    <button class="btn btn-link text-danger">Remove</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="mt-4">You may also like</h4>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/images/placeholder-product.png" class="card-img-top" style="height:120px;object-fit:cover" />
                        <div class="card-body">
                            <h6 class="card-title">SSD M.2 1TB</h6>
                            <p class="card-text small text-muted">R 1 499</p>
                            <a class="btn btn-outline-primary btn-sm">Add to cart</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/images/placeholder-product.png" class="card-img-top" style="height:120px;object-fit:cover" />
                        <div class="card-body">
                            <h6 class="card-title">JBL Headphones</h6>
                            <p class="card-text small text-muted">R 1 498</p>
                            <a class="btn btn-outline-primary btn-sm">Add to cart</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="~/images/placeholder-product.png" class="card-img-top" style="height:120px;object-fit:cover" />
                        <div class="card-body">
                            <h6 class="card-title">3.5mm Audio Cable</h6>
                            <p class="card-text small text-muted">R 99</p>
                            <a class="btn btn-outline-primary btn-sm">Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <h5>Total</h5>
                <div class="d-flex justify-content-between">
                    <div>Subtotal</div>
                    <div>R 9 999</div>
                </div>
                <div class="d-flex justify-content-between">
                    <div>Tax</div>
                    <div>R 1 500</div>
                </div>
                <hr />
                <div class="d-flex justify-content-between fw-bold">
                    <div>Grand Total</div>
                    <div>R 11 499</div>
                </div>

                <div class="form-check mt-3">
                    <input class="form-check-input" type="checkbox" id="agreeTerms" />
                    <label class="form-check-label small" for="agreeTerms">I agree with the terms and conditions</label>
                </div>

                <button class="btn btn-primary w-100 mt-3" disabled>Checkout</button>
            </div>
        </div>
    </div>
</div>
