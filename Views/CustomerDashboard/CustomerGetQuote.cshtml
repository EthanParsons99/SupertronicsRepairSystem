
@model SupertronicsRepairSystem.ViewModels.CustomerQuoteViewModel
@{
    ViewData["Title"] = "Get a Quote";
    Layout = "_ViewProductLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Get a quote</h2>

            <link rel="stylesheet" href="~/css/AllProducts.css">
            <form asp-action="CustomerGetQuote" method="post" novalidate>
                <div class="card mb-3">
                    <div class="card-header">Your details</div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Surname" class="form-label"></label>
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">Device & job information</div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DeviceType" class="form-label"></label>
                                <select asp-for="DeviceType" class="form-select">
                                    <option value="">Select device type</option>
                                    @foreach (var dt in Model.DeviceTypes)
                                    {
                                        <option value="@dt" selected="@(Model.DeviceType == dt ? "selected" : null)">@dt</option>
                                    }
                                </select>
                                <span asp-validation-for="DeviceType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SerialNumber" class="form-label"></label>
                                <input asp-for="SerialNumber" class="form-control" />
                                <span asp-validation-for="SerialNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Brand" class="form-label"></label>
                                <input asp-for="Brand" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Model" class="form-label"></label>
                                <input asp-for="Model" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="ProblemDescription" class="form-label"></label>
                                <textarea asp-for="ProblemDescription" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="CustomerViewProduct" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Send request</button>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card sticky-top" style="top:20px;">
                <div class="card-header">Help</div>
                <div class="card-body">
                    <p class="small text-muted">Provide as much detail as possible so we can diagnose the problem properly. If you are logged in your contact details are pre-filled.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
