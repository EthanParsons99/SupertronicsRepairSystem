@{
    ViewData["Title"] = "Quotes Management";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">Quotes Management</h2>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card filter-card mb-3">
        <div class="card-body">
            <h6 class="text-white mb-3">Filter Quotes</h6>
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label text-white">Status</label>
                    <select class="form-select">
                        <option selected>All</option>
                        <option value="pending">Pending</option>
                        <option value="in-progress">In Progress</option>
                        <option value="completed">Completed</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Customer</label>
                    <select class="form-select">
                        <option selected>All</option>
                        <option value="1">John Doe</option>
                        <option value="2">Jane Smith</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-white">Date Range</label>
                    <input type="text" class="form-control" placeholder="Select a Date Range" readonly>
                </div>
                <div class="col-md-1">
                    <button class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Quotes Table -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">All Quotes</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Quote ID</th>
                            <th>Quote Type</th>
                            <th>Customer</th>
                            <th>Status</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#Q001</td>
                            <td>Purchase</td>
                            <td>
                                <div>John Doe</div>
                                <small class="text-muted">john@email.com</small>
                            </td>
                            <td><span class="badge bg-info">In Progress</span></td>
                            <td>
                                <div>Sep 25, 2025</div>
                                <small class="text-muted">10:30</small>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@*------------------------------------------------------------------------------------------------ Styling ------------------------------------------------------------------------------------------------*@

<style>
    .filter-card {
        background-color: #2C3E50;
        border-radius: 15px;
        border: none;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: none;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .table-primary {
        background-color: #5865F2 !important;
        color: white;
    }

        .table-primary th {
            border: none;
            padding: 1rem;
        }

    .bg-dark {
        background-color: #2C3E50 !important;
    }

    .btn-primary {
        background-color: #5865F2;
        border-color: #5865F2;
    }

        .btn-primary:hover {
            background-color: #4752C4;
            border-color: #4752C4;
        }

    .badge.bg-info {
        background-color: #5865F2 !important;
    }
</style>