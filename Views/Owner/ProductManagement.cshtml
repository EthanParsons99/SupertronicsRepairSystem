@model SupertronicsRepairSystem.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Product Management";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Products Management</h2>
            <a href="@Url.Action("AddProduct", "Owner")" class="btn btn-dark">+ New Product</a>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card filter-card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label text-white">Product Name</label>
                    <input type="text" class="form-control" placeholder="Enter product name">
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Product ID</label>
                    <input type="text" class="form-control" placeholder="Enter Product ID">
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Price Range</label>
                    <select class="form-select">
                        <option selected>Select Price Range</option>
                        <option value="1">R0 - R1000</option>
                        <option value="2">R1000 - R5000</option>
                        <option value="3">R5000 - R10000</option>
                        <option value="4">R10000+</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">All Products</h5>
        </div>
        @if (Model.Products.Any())
        {
            <div class="card-body p-0">
                <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Product Name</th>
                            <th>Serial Number</th>
                            <th>Price</th>
                            <th>Stock Qauntity</th>
                            <th>Discount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td class="align-middle fw-semibold">
                                        <div class="d-flex align-items-center">
                                            <img src="@product.ImageUrl" alt="@product.Name" class="rounded me-3" style="width: 50px; height:50px; object-fit: cover;">
                                        </div>
                                            <div>
                                                <div>@product.Name</div>
                                            </div>
                                    </td>
                                    <td class="align-middle text-muted small">
                                        @(string.IsNullOrEmpty(product.SerialNumber) ? "N/A" : $"Serial: {product.SerialNumber}")
                                    </td>
                                    <td class="align-middle">
                                        <span class="fw-bold">@product.Price.ToString("R")</span>
                                        @if (product.DiscountPercentage > 0)
                                        {
                                            <br />
                                
                                            <span class="text-danger small">(@product.DiscountPercentage}% off)</span>
                                        }
                                    </td>
                                    <td class="align-middle" text-center>
                                        <span class="fw-bold">@product.StockQuantity</span>
                                    </td>
                                    <td class="align-middle text-black-center">@product.DiscountPercentage</td>

                                    <td class="align-middle">
                                        <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-info text-white me-2" title="Edit">
                                            <i class="bi bi-pencil"></i>Edit
                                        </a>
                                        <form asp-action="DeleteProduct" method="post" asp-route-id="@product.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete the product: @product.Name? This cannot be undone.');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i>Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
        }
    </div>
</div>

@*------------------------------------------------------------------------------------------------ Styling ------------------------------------------------------------------------------------------------*@

<style>
    .filter-card {
        background: linear-gradient(135deg, #5865F2 0%, #7289DA 100%);
        border-radius: 15px;
        border: none;
    }

        .filter-card .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

    .product-image {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 8px;
    }

    .table-primary {
        background-color: #5865F2 !important;
        color: white;
    }

        .table-primary th {
            border: none;
            padding: 1rem;
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: none;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .bg-dark {
        background-color: #2C3E50 !important;
    }

    .btn-dark {
        background-color: #2C3E50;
        border-color: #2C3E50;
    }

        .btn-dark:hover {
            background-color: #1a252f;
            border-color: #1a252f;
        }

    .btn-primary {
        background-color: #5865F2;
        border-color: #5865F2;
    }

        .btn-primary:hover {
            background-color: #4752C4;
            border-color: #4752C4;
        }
</style>