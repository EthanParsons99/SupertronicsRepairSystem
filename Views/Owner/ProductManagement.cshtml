@{
    ViewData["Title"] = "Product Management";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Products Management</h2>
            <a href="@Url.Action("AddProduct", "Owner")" class="btn btn-dark">+ New Product</a>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card filter-card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label text-white">Product Name</label>
                    <input type="text" class="form-control" placeholder="Enter product name">
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Product ID</label>
                    <input type="text" class="form-control" placeholder="Enter Product ID">
                </div>
                <div class="col-md-4">
                    <label class="form-label text-white">Price Range</label>
                    <select class="form-select">
                        <option selected>Select Price Range</option>
                        <option value="1">R0 - R1000</option>
                        <option value="2">R1000 - R5000</option>
                        <option value="3">R5000 - R10000</option>
                        <option value="4">R10000+</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">All Products</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Product Image</th>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Stock Level</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="https://via.placeholder.com/50" alt="Product" class="product-image">
                            </td>
                            <td>#1234</td>
                            <td>
                                <div>Samsung Galaxy S23</div>
                                <small class="text-muted">Serial: SN-12345789</small>
                            </td>
                            <td>R9999.99</td>
                            <td>34</td>
                            <td>
                                <button class="btn btn-sm btn-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-primary">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .filter-card {
        background: linear-gradient(135deg, #5865F2 0%, #7289DA 100%);
        border-radius: 15px;
        border: none;
    }

        .filter-card .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

    .product-image {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 8px;
    }

    .table-primary {
        background-color: #5865F2 !important;
        color: white;
    }

        .table-primary th {
            border: none;
            padding: 1rem;
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: none;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .bg-dark {
        background-color: #2C3E50 !important;
    }

    .btn-dark {
        background-color: #2C3E50;
        border-color: #2C3E50;
    }

        .btn-dark:hover {
            background-color: #1a252f;
            border-color: #1a252f;
        }

    .btn-primary {
        background-color: #5865F2;
        border-color: #5865F2;
    }

        .btn-primary:hover {
            background-color: #4752C4;
            border-color: #4752C4;
        }
</style>