@model SupertronicsRepairSystem.ViewModels.OwnerDashboardViewModel

@{
    ViewData["Title"] = "Owner Dashboard";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-1" style="color: var(--heading-text);">Dashboard</h2>
            <h4 style="color: var(--link-text);">Welcome Back, @Model.OwnerName</h4>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="dashboard-card">
                <div class="card-body py-4">
                    <h3>@Model.TotalProducts</h3>
                    <p class="mb-0">Total Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card" style="background: var(--dark-navy);">
                <i class="fas fa-check-circle"></i>
                <div class="card-body py-4">
                    <h3>@Model.CompletedRepairs</h3>
                    <p class="mb-0">Completed Repairs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card">
                <i class="fas fa-file-invoice-dollar"></i>
                <div class="card-body py-4">
                    <h3>@Model.QuotesAccepted</h3>
                    <p class="mb-0">Quotes Accepted</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card" style="background: var(--dark-navy);">
                <i class="fas fa-user-check"></i>
                <div class="card-body py-4">
                    <h3>@Model.QuotesAssigned</h3>
                    <p class="mb-0">Quotes Assigned</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Warranty Check</h5>
                </div>
                <div class="card-body">
                    <form id="warrantyForm" asp-action="CheckWarranty" method="post">
                        <div class="mb-3">
                            <label for="serialNumber" class="form-label">Enter Serial Number</label>
                            <input type="text" class="form-control" id="serialNumber" name="serialNumber" placeholder="e.g., SN-12345" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-2">Check Status</button>
                        <a asp-action="AddProduct" class="btn btn-primary w-100">Add New Product</a>
                    </form>

                    @if (Model.WarrantyCheckResult != null)
                    {
                        <div class="mt-3 alert @(Model.WarrantyCheckResult.IsValid ? "alert-success" : "alert-warning")" role="alert">
                            <strong style="color: var(--heading-text);">@Model.WarrantyCheckResult.ProductName</strong><br>
                            <small>Serial: @Model.WarrantyCheckResult.SerialNumber</small><br>
                            <span class="badge @(Model.WarrantyCheckResult.IsValid ? "bg-success" : "bg-warning")">
                                @(Model.WarrantyCheckResult.IsValid ? "Valid Warranty" : "No Warranty Found")
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Recent Repairs</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Job ID</th>
                                    <th>Customer</th>
                                    <th>Technician</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentRepairs != null && Model.RecentRepairs.Any())
                                {
                                    @foreach (var repair in Model.RecentRepairs)
                                    {
                                        <tr>
                                            <td>#@repair.Id?.Substring(0, Math.Min(8, repair.Id.Length)).ToUpper()</td>
                                            <td>@repair.CustomerName</td>
                                            <td>@(repair.TechnicianName ?? "Unassigned")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(repair.Status)">
                                                    @repair.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-action="RepairJobDetails" asp-route-id="@repair.Id" class="btn btn-sm btn-secondary">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center" style="color: var(--secondary-text);">
                                            No recent repairs found
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        // Modified to align with the names defined in the CSS, preferring the explicit badge- classes where available.
        return status?.ToLower() switch
        {
            "completed" => "badge-completed", // Maps to .bg-success
            "in progress" => "badge-in-progress", // Maps to .bg-info
            "pending" => "badge-pending", // Maps to .bg-warning
            "cancelled" => "badge-cancelled", // Maps to .bg-danger
            _ => "bg-secondary" // Fallback to a secondary style
        };
    }
}

<script>
    // Client-side validation for warranty form (Kept for functionality)
    document.getElementById('warrantyForm')?.addEventListener('submit', function(e) {
        const serialNumber = document.getElementById('serialNumber').value.trim();
        if (!serialNumber) {
            e.preventDefault();
            alert('Please enter a serial number');
        }
    });
</script>