@model SupertronicsRepairSystem.ViewModels.OwnerDashboardViewModel

@{
    ViewData["Title"] = "Owner Dashboard";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-1">Dashboard</h2>
            <h4 class="text-primary">Welcome Back, @Model.OwnerName</h4>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card bg-primary text-white">
                <div class="card-body text-center py-4">
                    <h1 class="display-4 fw-bold mb-0">@Model.TotalProducts</h1>
                    <p class="mb-0">Total Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card bg-primary text-white">
                <div class="card-body text-center py-4">
                    <h1 class="display-4 fw-bold mb-0">@Model.CompletedRepairs</h1>
                    <p class="mb-0">Completed Repairs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card bg-primary text-white">
                <div class="card-body text-center py-4">
                    <h1 class="display-4 fw-bold mb-0">@Model.QuotesAccepted</h1>
                    <p class="mb-0">Quotes Accepted</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card bg-primary text-white">
                <div class="card-body text-center py-4">
                    <h1 class="display-4 fw-bold mb-0">@Model.QuotesAssigned</h1>
                    <p class="mb-0">Quotes Assigned</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row g-3">
        <!-- Warranty Check Card -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Warranty Check</h5>
                </div>
                <div class="card-body">
                    <form id="warrantyForm" asp-action="CheckWarranty" method="post">
                        <div class="mb-3">
                            <label for="serialNumber" class="form-label">Enter Serial Number</label>
                            <input type="text" class="form-control" id="serialNumber" name="serialNumber" placeholder="e.g., SN-12345" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-2">Check Status</button>
                        <a asp-action="AddProduct" class="btn btn-primary w-100">Add New Product</a>
                    </form>

                    @if (Model.WarrantyCheckResult != null)
                    {
                        <div class="mt-3 alert @(Model.WarrantyCheckResult.IsValid ? "alert-success" : "alert-warning")">
                            <strong>@Model.WarrantyCheckResult.ProductName</strong><br>
                            <small>Serial: @Model.WarrantyCheckResult.SerialNumber</small><br>
                            <span class="badge @(Model.WarrantyCheckResult.IsValid ? "bg-success" : "bg-warning")">
                                @(Model.WarrantyCheckResult.IsValid ? "Valid Warranty" : "No Warranty Found")
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Repairs Card -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Recent Repairs</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Job ID</th>
                                    <th>Customer</th>
                                    <th>Technician</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentRepairs != null && Model.RecentRepairs.Any())
                                {
                                    @foreach (var repair in Model.RecentRepairs)
                                    {
                                        <tr>
                                            <td>#@repair.Id?.Substring(0, Math.Min(8, repair.Id.Length)).ToUpper()</td>
                                            <td>@repair.CustomerName</td>
                                            <td>@(repair.TechnicianName ?? "Unassigned")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(repair.Status)">
                                                    @repair.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-action="RepairJobDetails" asp-route-id="@repair.Id" class="btn btn-sm btn-outline-primary">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-3">
                                            No recent repairs found
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "bg-success",
            "in progress" => "bg-primary",
            "pending" => "bg-warning",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@*------------------------------------------------------------------------------------------------ Styling ------------------------------------------------------------------------------------------------*@

<style>
    .stat-card {
        border-radius: 10px;
        transition: transform 0.2s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .bg-primary {
        background-color: #2C3E50 !important;
    }

    .bg-dark {
        background-color: #2C3E50 !important;
    }

    .text-primary {
        color: #5865F2 !important;
    }

    .btn-primary {
        background-color: #5865F2;
        border-color: #5865F2;
    }

        .btn-primary:hover {
            background-color: #4752C4;
            border-color: #4752C4;
        }

    .badge.bg-primary {
        background-color: #5865F2 !important;
    }

    .btn-outline-primary {
        color: #5865F2;
        border-color: #5865F2;
    }

        .btn-outline-primary:hover {
            background-color: #5865F2;
            border-color: #5865F2;
            color: white;
        }
</style>

<script>
    // Client-side validation for warranty form
    document.getElementById('warrantyForm')?.addEventListener('submit', function(e) {
        const serialNumber = document.getElementById('serialNumber').value.trim();
        if (!serialNumber) {
            e.preventDefault();
            alert('Please enter a serial number');
        }
    });
</script>