@model SupertronicsRepairSystem.ViewModels.TechnicianManagementViewModel
@{
    ViewData["Title"] = "Technician Management";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Technicians Management</h2>
            <a href="@Url.Action("AddTechnician", "Owner")" class="btn btn-dark">+ New Technician</a>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card filter-card mb-3">
        <form asp-action="TechnicianManagement" method="get">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="SearchTerm" class="form-label text-white"></label>
                        <input asp-for="SearchTerm" type="text" class="form-control" placeholder="Search by name or email" value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-dark w-100">
                            <i class="bi bi-funnel"></i> Search
                        </button>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a asp-action="TechnicianManagement" class="btn btn-outline-light btn-sm mt-3"><i class="bi bi-x-circle me-1"></i> Clear Search</a>
                }
            </div>
        </form>
    </div>

    <!-- Technicians Table -->
    @if (Model.Technicians.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">All Products</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th class="text-center">Role</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var technician in Model.Technicians)
                            {
                                <tr>
                                    <td class="align-middle fw-semibold">@technician.FirstName</td>
                                    <td class="align-middle">@technician.Surname</td>
                                    <td class="align-middle">@technician.Email</td>
                                    <td class="align-middle">@(string.IsNullOrEmpty(technician.PhoneNumber) ? "N/A" : technician.PhoneNumber)</td>
                                    <td class="align-middle text-center">
                                        <span class="badge rounded-pill text-uppercase badge-technician">@technician.Role.ToString()</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="EditTechnician" asp-route-id="@technician.UserId" class="btn btn-sm btn-primary me-1" title="Edit Technician">
                                            <i class="bi bi-pencil"></i>Edit
                                        </a>
                                        <form asp-action="DeleteTechnician" asp-route-id="@technician.UserId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this technician?');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete Technician">
                                                <i class="bi bi-trash"></i>Delete
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No technicians found matching the criteria.
        </div>
    }
</div>

@*------------------------------------------------------------------------------------------------ Styling ------------------------------------------------------------------------------------------------*@

<style>
    .filter-card {
        background: linear-gradient(135deg, #5865F2 0%, #7289DA 100%);
        border-radius: 15px;
        border: none;
    }

        .filter-card .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: none;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .table-primary {
        background-color: #5865F2 !important;
        color: white;
    }

        .table-primary th {
            border: none;
            padding: 1rem;
        }

    .bg-dark {
        background-color: #2C3E50 !important;
    }

    .btn-dark {
        background-color: #2C3E50;
        border-color: #2C3E50;
    }

        .btn-dark:hover {
            background-color: #1a252f;
            border-color: #1a252f;
        }

    .btn-primary {
        background-color: #5865F2;
        border-color: #5865F2;
    }

        .btn-primary:hover {
            background-color: #4752C4;
            border-color: #4752C4;
        }
</style>